{
  "name": "barbershop",
  "version": "1.0.0",
  "private": true,
  "description": "Учебный проект от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.x",
    "autoprefixer": "^9.1.x",
    "browser-sync": "^2.26.0",
    "csscomb": "^4.2.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^4.0.2",
    "htmlhint": "^0.10.1",
    "stylelint": "^9.7.1",
    "stylelint-config-htmlacademy": "^0.1.1"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.12"
  }
}
